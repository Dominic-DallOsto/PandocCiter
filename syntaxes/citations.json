{
    "injectionSelector": "L:text.html.markdown",
    "patterns": [
        {
            "include": "#pandoc-citationA"
        },
        {
            "include": "#pandoc-citationB"
        }
    ],
    "repository": {
        "pandoc-citationA":{
            "match": "(?<=^|\\s|\\[|-)(@(.*?))(?=$|[\\s\\r\\n\\]{},~#%\\\\'\"=\\(\\)])",
            "name": "string.other.link.description.markdown.citation"
        },
        "pandoc-citationB":{
            "captures": {
                "2": {
                    "name": "string.other.link.description.markdown.citation"
                }
            },
            "match": "(\\[)((-)*@(.*?))(?=$|[\\s\\r\\n\\]{},~#%\\\\'\"=\\(\\)])",
            "name": "meta.paragraph.markdown"
        }
    },
    "scopeName": "pandoc-citation"
}
